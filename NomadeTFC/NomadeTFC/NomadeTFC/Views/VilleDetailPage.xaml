<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NomadeTFC.Views.VilleDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nom:" FontSize="Medium" />
        <Label Text="{Binding Nom}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="CP:" FontSize="Medium" />
        <Label Text="{Binding CP}" FontSize="Small"/>
        <Label Text="Temperature:" FontSize="Medium" />
        <Label Text="{Binding Temperature}" FontSize="Small"/>
        <Label Text="Vent:" FontSize="Medium" />
        <Label Text="{Binding Wind}" FontSize="Small"/>
        <Label Text="Humidité:" FontSize="Medium" />
        <Label Text="{Binding Humidity}" FontSize="Small"/>
        <Label Text="Visibilité:" FontSize="Medium" />
        <Label Text="{Binding Visibility}" FontSize="Small"/>
        <Label Text="Lever:" FontSize="Medium" />
        <Label Text="{Binding Sunrise}" FontSize="Small"/>
        <Label Text="Coucher:" FontSize="Medium" />
        <Label Text="{Binding Sunset}" FontSize="Small"/>
    </StackLayout>

</ContentPage>